<StartScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding:10,10
            spacing: 20,20
            Image:
                id: img1
                pos:self.pos
                size:root.size
                source:'mecca.jpg'
            RelativeLayout:
                Button
                    id: q2
                    text:root.bidi_text2
                    font_name:"Shoroq-Font.ttf"
                    font_size: 18
                    on_press:root.mpage()
                    size_hint: 0.65, 0.2
                    pos_hint:{'center_x':0.5,'center_y':0.1}
                    color: 0,0,0,1

                Button
                    id: q3
                    text:root.bidi_text3
                    font_name:"Shoroq-Font.ttf"
                    font_size: 18
                    on_press:root.qbook()
                    size_hint: 0.65, 0.2
                    pos_hint:{'center_x':0.5,'center_y':0.9}
                    color: 0,0,0,1
                Button
                    id: q4
                    text:root.bidi_text4
                    font_name:"Shoroq-Font.ttf"
                    font_size: 18
                    on_press:root.sbook()
                    size_hint: 0.65, 0.2
                    pos_hint:{'center_x':0.5,'center_y':0.5}
                    color: 0,0,0,1
        GridLayout:
            cols:1
            rows:1
            size_hint:0.4,0.4

            Label:
                id: q5
                halign: 'right'
                text: root.bidi_text5
                font_name: "Shoroq-Font.ttf"

<MasbhaPage>:
    GridLayout:
        cols:1
        rows:6
        Button
            text:root.bidi_text6
            font_name:"Shoroq-Font.ttf"
            font_size: 25
            on_press:root.out()
            size_hint: 0.2, 0.2
            color: 1,0,0,1
            background_color: 1,1,1,0
            opacity: 1 if self.state == 'normal' else 0.5
        Image:
            id: img4
            pos:self.pos
            size:root.size
            source:'main-logo.png'
        RelativeLayout:
            Label:
                text:root.bidi_text7
                font_size:20
                font_name:"Shoroq-Font.ttf"
                pos_hint:{'center_x':0.5, 'center_y':0.95}
            Label:
                id: lbl
                text:"0"
                font_size:25
                pos_hint:{'center_x':0.5, 'center_y':0.85}
            Button
                text:root.bidi_text14
                font_name:"Shoroq-Font.ttf"
                font_size: 40
                on_press:root.n_plus()
                size_hint: 0.5, 0.5
                color: 0,0,0,1
                background_color: 1,1,1,1
                pos_hint:{'center_x':0.5, 'center_y':0.4}
            Button
                text:root.bidi_text15
                font_name:"Shoroq-Font.ttf"
                font_size: 15
                on_press:root.zero()
                size_hint: 0.2, 0.15
                color: 1,0,0,1
                background_color: 1,1,1,0
                pos_hint:{'center_x':0.5, 'center_y':0.1}
                opacity: 1 if self.state == 'normal' else 0.5

<QuranBook>:
    GridLayout:
        cols: 1
        rows:6
        spacing: 15, 15
        Button
            text:root.bidi_text7
            font_name:"Shoroq-Font.ttf"
            font_size: 25
            on_press:root.out1()
            size_hint: 0.2, 0.2
            color: 1,0,0,1
            background_color: 1,1,1,0
            opacity: 1 if self.state == 'normal' else 0.5
        Image:
            id:img2
            pos:self.pos
            size:root.size
            source:'quran.jpg'
        RelativeLayout
            Label:
                text:root.bidi_text17
                font_size: 18
                font_name:"Shoroq-Font.ttf"
                pos_hint: {'center_x':0.5, 'center_y':0.95}
                underline: True
            Button:
                text:root.bidi_text9
                on_press:root.readg()
                size_hint: 0.65, 0.15
                font_size: 20
                pos_hint:{'center_x':0.5, 'center_y':0.5}
                font_name:"Shoroq-Font.ttf"
                color :0,0,0,1


